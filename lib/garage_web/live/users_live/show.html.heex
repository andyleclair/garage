<div class="flex justify-between">
  <.header>
    <%= @user.name %>
    <:subtitle>AKA: <.username user={@user} /></:subtitle>
  </.header>

  <div class="">
    <img src={@user.avatar_url} title={"#{@user.username}'s avatar"} />
  </div>
</div>

<h2 class="text-4xl border-b mt-5">
  Builds
</h2>

<%= if @user.builds == [] do %>
  <h3 class="text-2xl mt-5">No Builds Yet</h3>
<% else %>
  <%= for build <- @user.builds  do %>
    <.card build={build} />
  <% end %>
<% end %>
