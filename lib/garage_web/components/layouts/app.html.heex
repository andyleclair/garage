<header class="px-4 sm:px-6 lg:px-8 bg-white border-b boder-color-zinc-800">
  <div class="flex items-center justify-between py-3 text-sm">
    <div class="flex items-center gap-4">
      <.a navigate={~p"/"}>
        <p class="text-giant_goldfish rounded-full px-2 text-xl">
          69 Garageâ„¢
        </p>
      </.a>
    </div>
    <div class="flex items-center gap-4 font-semibold leading-6 text-zinc-900">
      <.a navigate={~p"/builds"}>Builds</.a>
      <%= if @current_user do %>
        <span class="px-3 py-2 text-sm font-medium text-white rounded-md">
          <%= @current_user.email %>
        </span>
        <.button href={~p"/sign-out"} icon_name="hero-arrow-left-circle">
          Sign Out
        </.button>
      <% else %>
        <.button href={~p"/sign-in"} icon_name="hero-arrow-right-circle">Sign In</.button>
      <% end %>
    </div>
  </div>
</header>
<main class="px-4 py-20 sm:px-6 lg:px-8 bg-white">
  <div class="mx-auto max-w-7xl sm:px-6 lg:px-8">
    <.flash_group flash={@flash} />
    <%= @inner_content %>
  </div>
</main>
